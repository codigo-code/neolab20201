<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>Clase5Web</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>


	<servlet>
		<servlet-name>saludo</servlet-name>
		<servlet-class>com.neoris.servlet.SaludoServlet</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>saludo</servlet-name>
		<url-pattern>/saludar</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>persona</servlet-name>
		<servlet-class>com.neoris.servlet.PersonaServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>persona</servlet-name>
		<url-pattern>/persona</url-pattern>
	
	</servlet-mapping>

</web-app>